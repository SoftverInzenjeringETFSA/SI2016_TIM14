<div class="container-fluid">
  <div class="row content">
{{side-navigation}}
    <div class="col-sm-9">
      <h4>Search Group</h4>
      <div class="col-sm-6">
      <div class="group-search">
                    <span class="glyphicon glyphicon-search"></span>
                  {{input placeholder = "Search Group" value=search}}
              <button class="btn" {{action "searchGroups"}}>Search </button>
          </div>
    </div>
      <table class="table table-striped">
         <thead>
            <tr>
              <th>Ime grupe</th>
              <th>Opis</th>
              <th>Akcija</th>
            </tr>
         </thead>
         <tbody>
            {{#each model.searchedGroups as |grupa|}}
              <tr>
              <td>{{grupa.name}}</td>
              <td>{{grupa.description }}</td>
              <td><button class="btn" {{ action 'joinGroup' grupa.id }} >Join</button></td>
              </tr>
            {{/each}}
         </tbody>
      </table>
    </div>

  </div>
</div>
