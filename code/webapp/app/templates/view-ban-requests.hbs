{{outlet}}
<div class="container-fluid">
  <div class="row content">
{{side-navigation}}
    <div class="col-sm-9">
      <h4><small>VIEW ALL BAN REQUESTS</small></h4>
      <h4 style="color:green">{{Message}}</h4>
      <h4 style="color:green">{{Message2}}</h4>
      <table class="table table-striped">
         <thead>
            <tr>
              <th>From</th>
              <th>To</th>
              <th>Reason</th>
              <th>ChatGroup</th>
              <th>Accept/Deny</th>
            </tr>
         </thead>
         <tr>
          <td>
             {{#each model as |ban|}}
               <tr> <td>{{ban.sourceusername}}</td></tr>
             {{/each}}
           </td>
           <td>
           {{#each model as |ban|}}
             <tr> <td>{{ban.targetusername}}</td> </tr>
           {{/each}}
           </td>
           <td>
           {{#each model as |ban|}}
             <tr> <td>{{ban.reason}}</td> </tr>
           {{/each}}
           </td>
           <td>
           {{#each model as |ban|}}
             <tr> <td>{{ban.groupname}}</td> </tr>
           {{/each}}
           </td>
           <td>
           {{#each model as |ban|}}
              <tr>
              <td><button {{ action 'banujKorisnika' ban.targetId ban.chatGroupId ban.id }}>Accept</button></td>
               <td><button {{ action 'odbijbanKorisnika' ban.id }} >Deny</button></td>
              </tr>
            {{/each}}
           </td>
        </tr>
         <!--<tbody> - SPECIFICIRAJTE SAMO Å TA VAM SE KUPI IZ BAZE U KOLONAMA ISPOD
