<div class="container-fluid">
    <div class="row content">
        {{side-navigation}}
        <div class="col-sm-9">
            <div class="zaChat">
                <div class="row content">
                    <div class="gornjiButton">
                        <div class="row">
                            <div class="col-sm-6">
                                <div class="group-search">
                                    <span class="glyphicon glyphicon-search"></span>
                                    {{input placeholder = "Search group" value=search}}
                                    {{#link-to 'searchgroup' search }}<button class="btn" >Search </button>{{/link-to}}
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Group Name </th>
                                    <th>Leave Group </th>
                                    <th>All Messages</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each model.searchedGroups as |grupa|}}
                                <tr>
                                    <td>{{grupa.name}}</td>
                                    <td> <button class="btn" {{ action 'leaveGroup' grupa.id }} > Leave</button></td>
                                    <td><button class="btn">View</button></td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
